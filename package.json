{
  "name": "gaulish-api",
  "version": "1.0.0",
  "description": "An API for gaulish.io",
  "author": "Phillip Maier",
  "license": "ISC",
  "main": "./src/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "dotenv -- node ./dist/server.js",
    "doc:build": "dotenv -- cross-var docker build --build-arg DOCKER_WORKDIR=%DOCKER_WORKDIR% -t gaulish-api .",
    "doc:run": "docker run --rm --name gaulish-api -p 3001:3001 -v $INIT_CWD:/usr/src gaulish-api",
    "dev:docker": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "dev": "dotenv -- tsnd --inspect=9230 -r tsconfig-paths/register --poll --files --respawn src/server.ts",
    "lint": "eslint . --fix",
    "generate-types": "graphql-codegen --config codegen.yml && npm run lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.11",
    "argon2": "^0.28.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dataloader": "^2.1.0",
    "express": "^5.0.0-alpha.7",
    "express-graphql": "^0.12.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "node-fetch": "^3.2.4",
    "passport": "^0.5.2",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.0",
    "pg-promise": "^10.11.1",
    "socket.io": "^4.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-resolvers": "^2.6.4",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.31",
    "@types/passport": "^1.0.7",
    "@types/passport-google-oauth2": "^0.1.5",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  }
}
