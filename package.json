{
  "name": "gaulish-api",
  "version": "1.0.0",
  "description": "An API for gaulish.io",
  "author": "Phillip Maier",
  "license": "ISC",
  "main": "./src/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "dotenv -- node ./dist/server.js",
    "doc:build": "dotenv -- cross-var docker build --build-arg DOCKER_WORKDIR=%DOCKER_WORKDIR% -t gaulish-api .",
    "doc:run": "docker run --rm --name gaulish-api -p 3001:3001 -v $INIT_CWD:/usr/src gaulish-api",
    "dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "dev:local": "dotenv -- tsnd --inspect-brk=9230 -r tsconfig-paths/register --poll --files --respawn src/server.ts",
    "lint": "eslint . --fix",
    "generate-types": "graphql-codegen --config codegen.yml && npm run lint"
  },
  "dependencies": {
    "dataloader": "^2.0.0",
    "express": "^5.0.0-alpha.7",
    "express-graphql": "^0.12.0",
    "graphql-tag": "^2.11.0",
    "graphql-tools": "^7.0.4",
    "graphql-ws": "^4.3.1",
    "jose": "^3.11.5",
    "lodash": "^4.17.21",
    "passport": "^0.4.1",
    "passport-google-oauth2": "^0.2.0",
    "pg-promise": "^10.10.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-resolvers": "^1.19.0",
    "@types/express": "^4.17.9",
    "@types/lodash": "^4.14.168",
    "@types/passport": "^1.0.6",
    "@types/passport-google-oauth2": "^0.1.3",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  }
}
